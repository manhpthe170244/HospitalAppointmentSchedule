<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.MaterialComponents.Button.OutlinedButton.Success" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/success</item>
        <item name="strokeColor">@color/success</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.Error" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/error</item>
        <item name="strokeColor">@color/error</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>
</resources> 